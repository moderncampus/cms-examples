<?xml version="1.0" encoding="UTF-8"?>
<tcf>
	<title>New Section</title>
	<variable-list>
		<!-- dirname and breadcrumv name -->
		<variable section="Folder Information" name="dirname" prompt="Folder Name" alt="Enter the directory name that will be visible in the CMS and in the URL. No special characters or spaces."></variable>
		<variable name="cmsBreadcrumbName" prompt="Section Title" alt="Enter a friendly name for the section's title and/or breadcrumb."></variable>

		<!-- general page setup -->
		<include>_commonvars.inc</include>
		<variable name="tcfname" type="text" display="none">section.tcf</variable>
	</variable-list>

	<!-- Use this to specify a template group for the new section. -->
	<directory-list>
		<parent name="current_folder" path=".">
			<directory name="new-folder" template-group="*inherit*">{dirname}</directory>
		</parent>
	</directory-list>

	<template-list>
		<!-- navigation files -->
		<template  destination="{new-folder}" force-destination="yes" publish="no" filename="_nav" extension="ounav" display-filename="no" display-group="no" display-overwrite="no" exclude-sitemap="yes" exclude-search="yes">navigation.tmpl</template>

		<template 
				  prompt-prefix="Page" 
				  filename="index" 
				  display-filename="no" 
				  extension="pcf" 
				  destination="{new-folder}" 
				  force-destination="yes" 
				  preferred-redirect="yes"
				  tags="{tags}"
				  autonav="{autonavigation}">interior.tmpl</template>
	</template-list>

	<navigation-list>
		<navigation name="true" path="_nav.ounav" group="Everyone" publish="no"><li><a href="{ox_autonav:shorturl}">{title}</a></li></navigation>
		<navigation name="false" path="_nav.ounav" group="Everyone" publish="no"></navigation>
	</navigation-list>
</tcf>